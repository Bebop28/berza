<%= render 'friends/lookup' %>
<%# if @friendships.size > 0 %>
  <table class="table table-striped">
  <thead>
	<tr>
	  <th colspan="3" class="page-header">
	    <h2>My Friends</h2>
	  </th>
	  <th>Name</th>
	  <th>Email</th>
	  <th>Action</th>
	</tr>
  </thead>
  <body>
  	<% @friendships.each do |friend| %>
  	  <tr>
  		<td><%= friend.full_name %></td>
  		<td><%= friend.email %></td>
  	    <% link_to "View Profile", user_path(friend), class: "btn btn-primary btn-xs" %>
  	      <td><%= link_to "Remove friend", friendships_path(friend), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>
  	  </tr>
  	<% end %>
  </body>
  </table>
<% else %>
  <div class="row col-lg-12">
  	<p class="lead">You don't have any friends yet. Please add some</p>
  </div>
<%# end %>